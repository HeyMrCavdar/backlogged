<h1>Editing game</h1>

<%= form_for :game, url: game_path(@game), method: :patch do |f| %>

	<% if @game.errors.any? %>
		<div id="error explanation">
			<h2>
				<%= pluralize(game.errors.count, "error)") %>
				prohibited this article from being saved:
			</h2>
			<ul>
				<% @game.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<%end%>
			</ul>
		</div>
	<%end%>

	<p>
		<%= f.label :title %> <br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :platform %> <br>
		<%= f.text_field :platform %>
	</p>

	<p>
		<%= f.submit %>
	</p>

	<%end%>

	<%= link_to 'Back', games_path %>