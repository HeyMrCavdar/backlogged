<h1>Backlog</h1>

<%= link_to 'New Game', new_game_path %>

<table>
	<tr>
		<th>Title</th>
		<th>Platform</th>
	</tr>

	<% @games.each do |game| %>
		<tr>
			<td><%= game.title %></td>
			<td><%= game.platform %></td>
			<td><%= link_to 'Show', game_path(game) %></td>
			<td><%= link_to 'Edit', edit_game_path(game) %></td>
		</tr>
	<%end%>

</table>